{
  "name": "summit",
  "private": true,
  "version": "0.0.5",
  "type": "module",
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/unkemptmiso/Summit.git"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:3000 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.summit.app",
    "productName": "Summit",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance"
    },
    "publish": {
      "provider": "github",
      "owner": "unkemptmiso",
      "repo": "Summit"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "jszip": "3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  }
}